<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddRestaurantActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Restaurant" />

    <EditText
        android:id="@+id/et_addrestaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Restaurant Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_addrestaurant_streetnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street #"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_addrestaurant_streetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_addrestaurant_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_addrestaurant_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Province ( State )"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_addrestaurant_postalcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal Code #"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://..."
        android:inputType="text" />
    
    <EditText
        android:id="@+id/et_addrestaurant_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone # ( 16145556677 )"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_addrestaurant_saverestauranttoparse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Restaurant" />

    <Button
        android:id="@+id/btn_addrestaurant_fillinui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill Default Info" />

</LinearLayout>